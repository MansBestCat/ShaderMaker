{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "sourceMap": false,
        "allowJs": true, // Tells TypeScript to read JS files, as normally they are ignored as source files
        "declaration": false, // Generate d.ts files        
        "emitDeclarationOnly": false, //This compiler run should only output d.ts files
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "outDir": "./dist",
        "noImplicitAny": false
    },
    "include": [
        "**/*.*s"
    ]
}